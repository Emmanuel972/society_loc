<%= simple_form_for game do |f| %>
    <%= f.input :name, label: "Nom" %>
    <%= f.input :description, label: "Description" %>
    <%= f.input :picture, as: :file, label: "photo" %>
    <div class="d-flex justify-content-center">
      <%= f.submit "Ajouter", class: "btn btn-primary" %>
    </div>
  <% end %>
