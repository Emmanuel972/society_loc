<div class="container">
  <div class="text-center">
    <h1 class="fw-bold mt-4">Ma location</h1>
    <h2 class="text-capitalize"><%= @location.name %></h2>
  </div>
  <div class="d-flex justify-content-center">
  <div class="card mb-3 col-6">
    <% d = @location.start %>
    <% e = @location.end %>
    <div class="d-flex justify-content-center p-3 fw-bold">
    <p  class='nope'><%= "Date de début de votre réservation : #{d.strftime("%d/%m/%Y")} jusqu'au : #{e.strftime("%d/%m/%Y")}" %></p>
    </div>
      <%= cl_image_tag @location.game.picture.key, crop: :fill, class:"img-fluid card-body" %>
      <div class="card-body">
        <h5 class="card-title"><%= @location.game.name %></h5>
        <p class="card-text"><%= @location.game.description %></p>
      </div>
    </div>
  </div>
</div>
