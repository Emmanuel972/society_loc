<div class="container text-center">
  <h1 class="p-5">Mes jeux</h1>
  <div class="text-center p-3">
    <div class="row row-col-3">
      <% @games.each do |game| %>
        <div class="col m-3">
          <%= link_to  game_path(game) do %>
          <%= render "composents/game_card", game: game %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
