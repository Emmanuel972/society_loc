<div class="container">
  <h1 class="text-center p-5">Society Loc</h1>
  <div class="d-flex justify-content-center p-3">
    <ul class= "list-group list-unstyled">
      <% @games.each do |game| %>
        <li>
          <div class="card m-3" style="width: 18rem;">
              <div class="card-body d-flex justify-content-center" style=" height:100px; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%#= cl_image_path game.picture.key, height: 300, crop: :fill %>')">
                <%= cl_image_tag game.picture.key, height: 50, width: 50, crop: :fill %>
                <%= link_to game.name, game_path(game), class:"btn btn-success" %>
              </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
