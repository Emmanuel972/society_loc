<div class="container">
  <h1 class="text-center p-5">Society_loc</h1>
  <div class="d-flex justify-content-center p-3">
    <ul class= "list-group">
      <% @games.each do |game| %>
        <li>
          <div class="card m-3" style="width: 18rem;">
            <img src="..." class="card-img-top" alt="...">
              <div class="card-body d-flex justify-content-center">
                <%= link_to game.name, game_path(game), class:"btn btn-success" %>
              </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
