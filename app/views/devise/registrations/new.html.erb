<div class="container">
  <h2>Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name, label: "PrÃ©nom",
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "first-name" } %>
      <%= f.input :last_name, label: "Nom de famille",
                    required: false,
                    input_html: { autocomplete: "last-name" } %>
      <%= f.input :user_name, label: "Pseudo"
                    required: false,
                    input_html: { autocomplete: "user-name" } %>
      <%= f.input :email, label: "Adresse mail",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :password, label: "Mot de passe",
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation, label: "Confirmation de mot passe",
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, label: "S'inscrire", class:"btn btn-success m-2" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
